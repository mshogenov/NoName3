<Window
    x:Class="MakeBreak.Views.MakeBreakView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:MakeBreak.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModels:MakeBreakViewModel}"
    Title="Инструмент разрыва труб"
    Height="200"
    Width="350"
    WindowStartupLocation="Manual"
    ResizeMode="NoResize"
    Background="#F5F5F5"
    WindowStyle="None"
    AllowsTransparency="True"
    FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="TitleBarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="#555555" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Width" Value="40" />
                <Setter Property="Height" Value="30" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E0E0E0" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="#22000000" Opacity="0.4" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Заголовок окна с перетаскиванием -->
            <Border Grid.Row="0" Background="#3498DB" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Разрыв труб" Foreground="White" FontSize="16" FontWeight="Medium"
                               VerticalAlignment="Center" Margin="15,0,0,0" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="MinimizeButton" Style="{StaticResource TitleBarButtonStyle}"
                                Click="MinimizeButton_Click" ToolTip="Свернуть">
                            <Path Data="M0,0 L10,0" Stroke="White" StrokeThickness="1.5" Stretch="Uniform" Width="10" />
                        </Button>
                        <Button x:Name="CloseButton" Style="{StaticResource TitleBarButtonStyle}"
                                Click="CloseButton_Click" ToolTip="Закрыть">
                            <Path Data="M0,0 L10,10 M0,10 L10,0" Stroke="White" StrokeThickness="1.5" Stretch="Uniform"
                                  Width="10" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Контент окна -->
            <Grid Grid.Row="1" Margin="15">
                <StackPanel>
                    <Button HorizontalAlignment="Right" Content="Вернуть видимость трубы"
                            Command="{Binding BringBackVisibilityPipeCommand }" />
                    <TextBlock Text="Выберите две точки на трубе, которые нужно разделить разрывом."
                               Foreground="#555555" TextWrapping="Wrap" Margin="0,0,0,10" />

                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding StatusText, FallbackValue=Готов к работе}"
                                   Foreground="{Binding StatusColor, FallbackValue=#3498DB}"
                                   VerticalAlignment="Center" />

                        <Ellipse Grid.Column="1" Width="12" Height="12"
                                 Fill="{Binding StatusColor, FallbackValue=#3498DB}"
                                 Margin="10,0,0,0" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- Нижняя панель с кнопками -->
            <Grid Grid.Row="2" Background="#F0F0F0" Margin="0">
                <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
                        <Button Content="Сделать разрыв" Command="{Binding MakeBreakCommand}"
                                Width="150" Height="36"
                                Foreground="White" FontSize="14"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4" />
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#3498DB" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <!-- Тень кнопки -->
                                                    <Border x:Name="ShadowBorder"
                                                            Background="#22000000"
                                                            CornerRadius="4"
                                                            Margin="0,0,0,2"
                                                            Opacity="0.3">
                                                    </Border>

                                                    <!-- Фон кнопки -->
                                                    <Border x:Name="ButtonBorder"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4">

                                                        <!-- Эффект свечения при наведении -->
                                                        <Border.Effect>
                                                            <DropShadowEffect x:Name="GlowEffect"
                                                                              BlurRadius="10" ShadowDepth="0"
                                                                              Color="#3498DB" Opacity="0" />
                                                        </Border.Effect>

                                                        <!-- Содержимое кнопки -->
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                </Grid>

                                                <!-- Триггеры для анимации -->
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" TargetName="ButtonBorder"
                                                                Value="#2980B9" />
                                                        <Setter Property="Margin" TargetName="ButtonBorder"
                                                                Value="0,0,0,0" />
                                                        <Setter Property="Margin" TargetName="ShadowBorder"
                                                                Value="0,2,0,0" />

                                                        <!-- Анимация свечения при наведении -->
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetName="ButtonBorder"
                                                                        Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                                        To="0.7" Duration="0:0:0.2" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.TargetName="ButtonBorder"
                                                                        Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                                        To="0" Duration="0:0:0.2" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>

                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" TargetName="ButtonBorder"
                                                                Value="#1A5276" />
                                                        <Setter Property="Margin" TargetName="ButtonBorder"
                                                                Value="0,2,0,0" />
                                                        <Setter Property="Margin" TargetName="ShadowBorder"
                                                                Value="0,0,0,0" />
                                                    </Trigger>

                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" TargetName="ButtonBorder"
                                                                Value="#BDBDBD" />
                                                        <Setter Property="Opacity" TargetName="ShadowBorder"
                                                                Value="0.1" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>