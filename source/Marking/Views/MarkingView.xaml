<views:BaseRevitWindow
    x:Class="Marking.Views.MarkingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:Marking.ViewModels"
    mc:Ignorable="d"
    xmlns:convertes="clr-namespace:Marking.Views.Converters" xmlns:convertes1="clr-namespace:Marking.Views.Converters"
    xmlns:views="clr-namespace:NoNameApi.Views;assembly=NoNameAPI"
    d:DataContext="{d:DesignInstance viewModel:MarkingVM}"
    Background="{DynamicResource WindowBackgroundBrush}"
    WindowStartupLocation="Manual"
    Title="Поставить отметку высоты"
    SizeToContent="Height"
    Width="450">
    <Window.Resources>
        <ResourceDictionary>
            <convertes:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
            <d:ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </d:ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!-- Основная панель выбора -->
        <GroupBox Grid.Row="0"
                  Header="Выберите марку:"
                  Style="{DynamicResource GroupBoxStyle}" Margin="0 5">
            <ListBox ItemsSource="{Binding Path=Marks}"
                     SelectedItem="{Binding Path=SelectedMark, Mode=TwoWay}"
                     Style="{DynamicResource ModernListBoxStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"
                                   Style="{DynamicResource TextBlockStyle}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Чекбокс -->
        <CheckBox Grid.Row="1"
                  Content="Записывать этаж"
                  IsChecked="{Binding Path=RecordFloorIsChecked}"
                  Style="{DynamicResource JellyCheckboxStyle}">
        </CheckBox>
        <!-- Кнопки действий -->
        <Grid Grid.Row="2" Margin="0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Content="Обновить марки"
                    Margin="0 0 5 0"
                    Grid.Column="0"
                    Style="{DynamicResource CommonButtonStyle2}"
                    Command="{Binding UpdateMarksCommand}" />

            <Button Content="Поставить марки"
                    Grid.Column="1"
                    Margin="5 0 0 0"
                    Style="{DynamicResource CommonButtonStyle2}"
                    Command="{Binding PlaceStampsCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />

        </Grid>

        <!-- Панель предупреждения -->
        <Border Grid.Row="3"
                Visibility="{Binding OutstandingFamilyVisibility, Converter={StaticResource BoolVisibilityConverter}}"
                Style="{DynamicResource BorderContentStyle}">
            <StackPanel>
                <TextBlock
                    Style="{DynamicResource TextBlockStyle}"
                    TextWrapping="Wrap"
                    Foreground="#C53030"
                    Margin="0,0,0,10">
                    В проекте отсутствует целевое семейство.<LineBreak />
                    Добавить семейство в проект?
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Style="{DynamicResource CommonButtonStyle2}"
                            Content="Да"
                            Margin="0,0,5,0"
                            Command="{Binding DownloadFamilyCommand}" />

                    <Button Grid.Column="1"
                            Style="{DynamicResource CommonButtonStyle2}"
                            Content="Нет"
                            Margin="5,0,0,0" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</views:BaseRevitWindow>