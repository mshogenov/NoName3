<UserControl x:Class="MepElementsCopy.Views.CopyToDirectionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:MepElementsCopy.ViewModels"
             d:DataContext="{d:DesignInstance vm:MepElementsCopyLevelsViewModel}"
             xmlns:local="clr-namespace:MepElementsCopy.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <d:ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </d:ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        Margin="5"
       >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Группа Вверх -->
        <GroupBox Header="Вверх"
                  Style="{DynamicResource GroupBoxStyle }"
                  Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition  Width="120" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="Количество:"
                        VerticalAlignment="Center"
                        Style="{DynamicResource TextBlockStyle}" />
                    <TextBox Grid.Column="1"
                             LostFocus="UIElement_OnLostFocus"
                             Text="{Binding NumberOfElementsUpwards}"
                             Style="{DynamicResource ModernTextBoxStyle}"
                             VerticalAlignment="Center" />
                </Grid>
                <Grid Grid.Row="1"
                      Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Расстояние, мм:"
                               Style="{DynamicResource TextBlockStyle}"
                               VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        LostFocus="UIElement_OnLostFocus"
                        Text="{Binding DistanceUp}"
                        Style="{DynamicResource ModernTextBoxStyle}" />
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Группа Вниз -->
        <GroupBox Grid.Row="1"
                  Header="Вниз"
                  Style="{DynamicResource GroupBoxStyle}"
                  Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Количество:"
                               Style="{DynamicResource TextBlockStyle}"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Column="1"
                             LostFocus="UIElement_OnLostFocus"
                             Text="{Binding NumberOfElementsDown}"
                             Style="{DynamicResource ModernTextBoxStyle}" />
                </Grid>

                <Grid
                    Margin="5"
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Расстояние, мм:"
                               Style="{DynamicResource TextBlockStyle}"
                               VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        LostFocus="UIElement_OnLostFocus"
                        Text="{Binding DistanceDown}"
                        Style="{DynamicResource ModernTextBoxStyle}" />
                </Grid>

            </Grid>
        </GroupBox>

        <!-- Группа Влево/вправо -->
        <GroupBox Grid.Row="2"
                  Header="Влево / вправо"
                  Style="{DynamicResource GroupBoxStyle}"
                  Margin="0,0,0,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Количество:"
                               Style="{DynamicResource TextBlockStyle}"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Column="1"
                             LostFocus="UIElement_OnLostFocus"
                             Text="{Binding NumberByDirection}"
                             Style="{DynamicResource ModernTextBoxStyle}" />
                </Grid>
                <Grid Grid.Row="1"
                      Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="Расстояние, мм:"
                               Style="{DynamicResource TextBlockStyle}"
                               VerticalAlignment="Center" />
                    <TextBox
                        Grid.Column="1"
                        LostFocus="UIElement_OnLostFocus"
                        Text="{Binding DistanceByDirection}"
                        Style="{DynamicResource ModernTextBoxStyle}" />
                </Grid>
                <Grid Grid.Row="2"
                      Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Направление:"
                               Style="{DynamicResource TextBlockStyle}"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left"/>
                    <Button
                        Grid.Column="1"
                        Padding="3"
                        Content="Задать направление"
                        Command="{Binding SetDirectionCommand}"
                        Style="{DynamicResource CommonButtonStyle2}" />
                </Grid>

            </Grid>
        </GroupBox>
<DockPanel Grid.Row="3"
           HorizontalAlignment="Right">
    <!-- Кнопка Копировать -->
    <Button 
        Content="Копировать"
        Command="{Binding CopyByDirectionsCommand}"
        Style="{DynamicResource CommonButtonStyle2}"
        HorizontalAlignment="Right"
    />
    <Button Content="Закрыть"
            HorizontalAlignment="Right"
            Command="{Binding CloseCommand}"
            CommandParameter="{Binding  RelativeSource={RelativeSource AncestorType=Window}}"
            Style="{DynamicResource OutlineCloseButtonStyle}"
            Margin="10,0,0,0" />
</DockPanel>
      </Grid>
</UserControl>