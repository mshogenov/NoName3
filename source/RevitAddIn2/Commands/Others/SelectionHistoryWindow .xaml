<Window x:Class="RevitAddIn2.Commands.Others.SelectionHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RevitAddIn2.Commands.Others"
        mc:Ignorable="d"
        Title="SelectionHistoryWindow_" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="ListBoxHistories" Grid.Row="0" Margin="0,0,0,10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonApply" Content="Применить" Width="80" Margin="0,0,10,0" Click="ButtonApply_Click" />
            <Button x:Name="ButtonCancel" Content="Отмена" Width="80" Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
