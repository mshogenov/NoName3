<views:BaseRevitWindow
    x:Class="ElementsTypicalFloor.Views.ElementsTypicalFloorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:ElementsTypicalFloor.ViewModels"
    mc:Ignorable="d"
    xmlns:converter="clr-namespace:ElementsTypicalFloor.Views.Converters"
    xmlns:views="clr-namespace:NoNameApi.Views;assembly=NoNameAPI"
    d:DataContext="{d:DesignInstance viewModel:ElementsTypicalFloorViewModel}"
    Title="Элементы типового этажа"
    SizeToContent="Height"
    Background="{DynamicResource WindowBackgroundBrush}"
    Width="400"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <converter:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
            <d:ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </d:ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Style="{DynamicResource BorderContentStyle}">
            <DockPanel 
                        VerticalAlignment="Center">
                <TextBlock Text="Количество типовых этажей:"
                           Style="{DynamicResource TextBlockStyle}"
                           VerticalAlignment="Center" />
                <TextBox Text="{Binding TypicalFloorsCount}"
                         Width="200"
                         PreviewTextInput="TextBox_PreviewTextInput_1"
                         Style="{DynamicResource ModernTextBoxStyle}" />
            </DockPanel>
        </Border>

        <DockPanel Grid.Row="1"
                 
                     Margin="0,5">
            <Button Margin="0,0,5,0"
                    Command="{Binding SelectedElementsCommand}"
                    Style="{DynamicResource CommonButtonStyle2}">
                <TextBlock Text="Выделить элементы типового этажа"
                           TextWrapping="Wrap"
                           TextAlignment="Center" />
            </Button>

            <Button Margin="5,0,0,0"
                    Command="{Binding UpdateElementsCommand}"
                    Style="{DynamicResource CommonButtonStyle2}">
                <TextBlock Text="Обновить элементы"
                           TextWrapping="Wrap"
                           TextAlignment="Center" />
            </Button>
        </DockPanel>
        <Grid
            Style="{DynamicResource Grid2}"
            Grid.Row="2"
              
              Visibility="{Binding IsVisibilityMissingParameters,
                  Converter={StaticResource BoolVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       Style="{DynamicResource TextBlockStyle}"
                       Margin="5"
                       Text="В документе отсутствует параметр(ы):" />
            <Grid Grid.Row="1"
                  Margin="0 5"
                  Visibility="{Binding IsVisibilityMissingParametersMshNumberWithTypicalFloors
                      ,Converter={StaticResource BoolVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Style="{DynamicResource TextBlockStyle}"
                    Grid.Column="0"
                    TextWrapping="Wrap"
                    Text="{Binding ParamMshNumberWithTypicalFloors}" />
                <Button
                    Style="{DynamicResource CommonButtonStyle2}"
                    Grid.Column="1"
                    Command="{Binding LoadSharedParamMshNumberWithTypicalFloorsCommand }"
                    Content="Загрузить" />
            </Grid>
            <Grid Grid.Row="2"
                  Margin="0 5"
                  Visibility="{Binding IsVisibilityMissingParametersMshElementOfTypicalStorey
                      ,Converter={StaticResource BoolVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Style="{DynamicResource TextBlockStyle}"
                    Grid.Column="0"
                    TextWrapping="Wrap"
                    Text="{Binding Path=ParamMshTypeFloorElement}" />
                <Button
                    Grid.Column="1"
                    Style="{DynamicResource CommonButtonStyle2}"
                    Content="Загрузить"
                    Command="{Binding LoadSharedParamMshTypeFloorElementCommand }" />
            </Grid>

        </Grid>
    </Grid>
</views:BaseRevitWindow>