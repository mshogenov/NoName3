<Window
    x:Class="ElementsTypicalFloor.Views.ElementsTypicalFloorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:ElementsTypicalFloor.ViewModels"
    mc:Ignorable="d"
    xmlns:converter="clr-namespace:ElementsTypicalFloor.Views.Converters"
    d:DataContext="{d:DesignInstance viewModel:ElementsTypicalFloorViewModel}"
    Title="Элементы типового этажа"
   SizeToContent="Height"
    Width="400"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converter:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Background" Value="#3182CE" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#F5F6FA"
            CornerRadius="8"
            Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Background="White"
                    CornerRadius="4"
                    Padding="16">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Количество типовых этажей:"
                               FontSize="14"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding TypicalFloorsCount}"
                             Width="80"
                             Margin="16,0,0,0"
                             PreviewTextInput="TextBox_PreviewTextInput_1"
                             Style="{StaticResource ModernTextBox}" />
                </StackPanel>
            </Border>

            <UniformGrid Grid.Row="1"
                         Rows="1"
                         Margin="0,8">
                <Button Margin="0,0,8,0"
                        Command="{Binding SelectedElementsCommand}"
                        Style="{StaticResource ModernButton}">
                    <TextBlock Text="Выделить элементы типового этажа"
                               TextWrapping="Wrap"
                               TextAlignment="Center" />
                </Button>

                <Button Margin="8,0,0,0"
                        Command="{Binding UpdateElementsCommand}"
                        Style="{StaticResource ModernButton}">
                    <TextBlock Text="Обновить элементы"
                               TextWrapping="Wrap"
                               TextAlignment="Center" />
                </Button>
            </UniformGrid>
            <Grid Grid.Row="2"
                  Visibility="{Binding IsVisibilityMissingParameters,
                  Converter={StaticResource BoolVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Text="В документе отсутствует параметр(ы):" />
                <Grid Grid.Row="1"
                      Visibility="{Binding IsVisibilityMissingParametersMshNumberWithTypicalFloors
                      ,Converter={StaticResource BoolVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        TextWrapping="Wrap"
                        Text="{Binding ParamMshNumberWithTypicalFloors}" />
                    <Button
                        Grid.Column="1"
                        Command="{Binding LoadSharedParamMshNumberWithTypicalFloorsCommand }"
                        Content="Загрузить" />
                </Grid>
                <Grid Grid.Row="2"
                      Visibility="{Binding IsVisibilityMissingParametersMshElementOfTypicalStorey
                      ,Converter={StaticResource BoolVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        TextWrapping="Wrap"
                        Text="{Binding Path=ParamMshTypeFloorElement}" />
                    <Button
                        Grid.Column="1"
                        Content="Загрузить"
                        Command="{Binding LoadSharedParamMshTypeFloorElementCommand }" />
                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>