<Window
    x:Class="MarkingOfMarksNoModeless.Views.MarkingOfMarksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:MarkingOfMarksNoModeless.ViewModels"
    mc:Ignorable="d"
    xmlns:convertes="clr-namespace:MarkingOfMarks.Views.Converters"
    d:DataContext="{d:DesignInstance viewModel:MarkingOfMarksViewModel}"
  FontSize="14"
    WindowStartupLocation="Manual"
    Title="Поставить отметку высоты"
  SizeToContent="WidthAndHeight" >
    <Window.Resources>
        <convertes:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="0" >
            <TextBlock Text="Выберите марку:" Margin="5"/>
            <ListBox Grid.Column="0" ItemsSource="{Binding Path=Marks}" Margin="5" Height="Auto" SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock  Text="{Binding  Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <CheckBox Grid.Row="1" Content="Записывать этаж" IsChecked="{Binding Path=IsChecked}" Margin="5" VerticalContentAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Content="Обновить марки" Margin="5"   HorizontalAlignment="Center" Command="{Binding UpdateMarksCommand}"
CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            <Button Content="Поставить марки" Margin="5"  HorizontalAlignment="Center" Command="{Binding PlaceStampsCommand}"
   CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        </StackPanel>
        <Grid Grid.Row="3" Visibility="{Binding OutstandingFamilyVisibility,Converter={StaticResource ResourceKey=BoolVisibilityConverter}}">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" >
В проекте отсутсвует целевое семейство.<LineBreak/>
Добавить семейство в проект?
                </TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Да" Command="{Binding DownloadFamilyCommand}"/>
                    <Button Grid.Column="1" Content="Нет"/>
                </Grid>
                  
              
            
            </StackPanel>
        </Grid>
    </Grid>
</Window>