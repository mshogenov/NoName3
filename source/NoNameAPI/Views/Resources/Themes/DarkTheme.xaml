<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="DiamondBlue">#3e5f8a</Color>
    <Color x:Key="LightDiamondBlue"> #4f79b0</Color>
    <Color x:Key="LightDiamondBlue2"> #5b82b5</Color>
    <Color x:Key="DarkDiamondBlue">#2f496a</Color>
    <Color x:Key="DeepDiamondBlue">#2a415e</Color>
    <Color x:Key="WindowColor">#222933</Color>
    <Color x:Key="ContentColor">#3B4453</Color>
    <Color x:Key="SelectedColor">#333B49</Color>
    <Color x:Key="OverColor">#4E5A6B</Color>
    <Color x:Key="LightGrayColor">#d3d3d3</Color>
    <Color x:Key="LightSlateGreyColor">#758599</Color>
    <Color x:Key="CadetGreyColor">#929faf</Color>
    <Color x:Key="LightCadetGreyColor">#b0b9c4</Color>
    <Color x:Key="SilverGray">#8a9597</Color>
    <Color x:Key="LightWindowColor">#303947</Color>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="{StaticResource LightSlateGreyColor}" /> <!-- Цвет ползунка -->
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="{StaticResource CadetGreyColor}" />
    <!-- Цвет ползунка при наведении -->
    <SolidColorBrush x:Key="ScrollBarThumbPressedBrush" Color="{StaticResource LightCadetGreyColor}" />
    <!-- Цвет ползунка при перетаскивании -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowColor}" />
    <SolidColorBrush x:Key="ContentBrush" Color="{StaticResource ContentColor}" />
    <SolidColorBrush x:Key="LightWindowBrush" Color="{StaticResource LightWindowColor}" />
    <SolidColorBrush x:Key="CloseButtonTextBrush" Color="White" />
    <SolidColorBrush x:Key="TitleWindowBrush" Color="White" />
    <SolidColorBrush x:Key="TitleButtonContentBrush" Color="White" />
    <SolidColorBrush x:Key="TitleButtonIsMouseOverBrush" Color="{StaticResource OverColor}" />
    <SolidColorBrush x:Key="TitleButtonContentIsMouseOvertBrush" Color="White" />
    <SolidColorBrush x:Key="TextBlockColorBrush" Color="White" />
    <SolidColorBrush x:Key="GroupBoxHeaderBrush" Color="{StaticResource DiamondBlue}" />
    <SolidColorBrush x:Key="GroupBoxContentBrush" Color="White" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource OverColor}" />
    <SolidColorBrush x:Key="SetupButtonBrush" Color="{StaticResource DiamondBlue}" />
    <SolidColorBrush x:Key="SetupButtonBrush2" Color="{StaticResource DarkDiamondBlue}" />
    <SolidColorBrush x:Key="ItemsControlBrush1" Color="#3B4453" />
    <SolidColorBrush x:Key="ItemsControlBrush2" Color="#414958" />
    <SolidColorBrush x:Key="IsMouseOverBrush" Color="{StaticResource OverColor}" />
    <SolidColorBrush x:Key="IsSelectedBrush" Color="{StaticResource SelectedColor}" />
    <SolidColorBrush x:Key="DefaultButtonBrush" Color="Transparent" />
    <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource OverColor}" />
    <SolidColorBrush x:Key="IsMouseOverButtonBrush" Color="{StaticResource LightDiamondBlue}" />
    <SolidColorBrush x:Key="IsPressedButtonBrush" Color="{StaticResource LightDiamondBlue2}" />
    <SolidColorBrush x:Key="SelectionIndicatorBrush" Color="{StaticResource DiamondBlue}" />
    <SolidColorBrush x:Key="CheckboxBorderBrush" Color="{StaticResource SilverGray}" />
    <SolidColorBrush x:Key="SettingsButtonBrush" Color="{StaticResource SilverGray}" />
    <SolidColorBrush x:Key="SelectButtonForegroundBrush" Color="White" />
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="{StaticResource LightWindowColor}" />
    
   
 
    
    
    <SolidColorBrush x:Key="ComboBoxDisabledBackground" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ComboBoxDisabledBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ComboBoxDisabledForeground" Color="#888888"/>
    <SolidColorBrush x:Key="ComboBoxArrowFill" Color="{StaticResource LightGrayColor}"/>
    <SolidColorBrush x:Key="ComboBoxDisabledArrowFill" Color="#AAAAAA"/>
    <SolidColorBrush x:Key="ComboBoxPopupBackground" Color="{StaticResource LightWindowColor}"/>
    <SolidColorBrush x:Key="ComboBoxPopupBorderBrush" Color="#CCCCCC"/>
</ResourceDictionary>