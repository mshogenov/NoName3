                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="{DynamicResource ItemsControlBrush2}" />
                                    </Trigger>

                                    <!-- Ваши остальные триггеры -->
