<UserControl x:Class="UpdatingParameters.Views.ParameterSelectorPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:controls="clr-namespace:NoNameApi.Views.Controls;assembly=NoNameAPI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Popup x:Name="Popup"
           StaysOpen="True"
           Width="250"
           IsOpen="{Binding IsPopupOpen, RelativeSource={RelativeSource AncestorType=UserControl}}"
           PlacementTarget="{Binding CurrentPopupTarget, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <controls:SearchBox
                TextChanged="SearchBox_OnTextChanged"/>
            <Grid Grid.Row="1">
                <TabControl>
                    <TabItem Header="Параметры экземпляра">
                        <ListBox x:Name="InstanceParametersListBox"
                                 Height="300">
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Параметры типа">
                        <ListBox x:Name="TypeParametersListBox"
                                 Height="300">
                        </ListBox>
                    </TabItem>
                </TabControl>
            </Grid>
            <DockPanel Grid.Row="2" HorizontalAlignment="Right">
                <Button Content="Закрыть"
                        Command="{Binding ClosePopupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </DockPanel>
        </Grid>
    </Popup>
</UserControl>