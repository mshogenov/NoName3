<UserControl x:Class="UpdatingParameters.Views.ParameterSelectorPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:controls="clr-namespace:NoNameApi.Views.Controls;assembly=NoNameAPI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <d:ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </d:ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Popup x:Name="Popup"
           Style="{DynamicResource ModernPopupStyle}"
           StaysOpen="True"
           IsOpen="{Binding IsPopupOpen, RelativeSource={RelativeSource AncestorType=UserControl}}"
           PlacementTarget="{Binding CurrentPopupTarget, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border
            Style="{DynamicResource BorderContentStyle}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <controls:SearchBox
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    TextChanged="SearchBox_OnTextChanged" />

                <Grid Grid.Row="1">
                    <TabControl Style="{DynamicResource TabControlStyle}"
                                Background="Transparent">
                        <TabItem Header="Параметры экземпляра" 
                                 Style="{DynamicResource TabItemStyle}">
                            <ListBox
                                Style="{DynamicResource ModernListBoxStyle}"
                               
                                x:Name="InstanceParametersListBox"
                                Height="300">
                            </ListBox>
                        </TabItem>
                        <TabItem Header="Параметры типа"
                                 Style="{DynamicResource TabItemStyle}">
                            <ListBox x:Name="TypeParametersListBox"
                                     Style="{DynamicResource ModernListBoxStyle}"
                                     Height="300">
                            </ListBox>
                        </TabItem>
                    </TabControl>
                </Grid>

                <DockPanel Grid.Row="2"
                           HorizontalAlignment="Right"
                           Margin="0,10,0,0">
                    <Button Content="Закрыть"
                            Style="{DynamicResource OutlineCloseButtonStyle}"
                            Command="{Binding ClosePopupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </DockPanel>
            </Grid>
        </Border>
    </Popup>
</UserControl>