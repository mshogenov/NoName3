<UserControl x:Class="UpdatingParameters.Views.TreeListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:converters="clr-namespace:UpdatingParameters.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/UpdatingParameters;component/Views/Resources/TreeListBoxStyles.xaml " />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Основной ListBox -->
    <ListBox x:Name="MainListBox"
             ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:TreeListBox}, Path=ItemsSource}"
             ItemContainerStyle="{StaticResource TreeItemDefaultContainerStyle}"
             ItemTemplate="{StaticResource DefaultItemTemplate}"
             Background="{Binding RelativeSource={RelativeSource AncestorType=local:TreeListBox}, Path=Background}"
             BorderBrush="{Binding RelativeSource={RelativeSource AncestorType=local:TreeListBox}, Path=BorderBrush}"
             BorderThickness="{Binding RelativeSource={RelativeSource AncestorType=local:TreeListBox}, Path=BorderThickness}" />
</UserControl>