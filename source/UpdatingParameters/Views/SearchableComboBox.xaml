<UserControl x:Class="UpdatingParameters.Views.SearchableComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:NoNameApi.Views.Controls;assembly=NoNameAPI"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="200">
    <UserControl.Resources>
        <ResourceDictionary>
            <d:ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </d:ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Основное поле -->
        <Border x:Name="Border"
                Style="{DynamicResource BorderContentStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="DisplayTextBox"
                         Style="{DynamicResource ModernTextBoxStyle}"
                         Grid.Column="0"
                         IsReadOnly="True"
                         Cursor="Hand"
                         PreviewMouseDown="DisplayTextBox_PreviewMouseDown"
                         PreviewMouseUp="DisplayTextBox_PreviewMouseUp"
                         Focusable="False" />

                <Button x:Name="DropDownButton"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Focusable="False"
                        Click="DropDownButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                      Fill="Black"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Выпадающий список -->
        <Popup x:Name="Popup"
               Style="{DynamicResource ModernPopupStyle}"
               StaysOpen="True"
               PlacementTarget="{Binding ElementName=Border}"
               MinWidth="{Binding ActualWidth, ElementName=Border}"
               MaxHeight="300"
               VerticalOffset="2">
            <Border
                Style="{DynamicResource BorderFolding}"
                Margin="0,0,8,8">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="Gray" Opacity="0.3" BlurRadius="5" />
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Поле поиска -->
                    <controls:SearchBox x:Name="SearchTextBox"
                                        Grid.Row="0"
                                        Margin="0,5"
                                        Placeholder="Поиск..."
                                        Icon="🔍"
                                        ShowIcon="True"
                                        TextChanged="SearchTextBox_TextChanged"/>
                    <!-- Список элементов -->
                    <ListBox x:Name="ItemsListBox"
                             Style="{DynamicResource ModernListBoxStyle}"
                             Grid.Row="1"
                             MaxHeight="300">
                    </ListBox>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>