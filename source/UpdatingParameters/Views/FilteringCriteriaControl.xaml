<UserControl x:Class="UpdatingParameters.Views.FilteringCriteriaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:converters="clr-namespace:UpdatingParameters.Views.Converters"
             xmlns:services="clr-namespace:UpdatingParameters.Services"
             xmlns:vm="clr-namespace:UpdatingParameters.ViewModels"
             xmlns:models="clr-namespace:UpdatingParameters.Models"
             d:DataContext="{d:DesignInstance Type = vm:FilteringCriteriaVM}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <DataTemplate DataType="{x:Type models:FilterGroup}">
            <local:FilterGroupControl />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:FilterRule}">
            <local:FilterRuleControl />
        </DataTemplate>
    </UserControl.Resources>

    <Border BorderBrush="#4CAF50" BorderThickness="2"
            Background="#E8F5E8" Margin="5" CornerRadius="5">
        <Grid Margin="10">
            <ContentControl Content="{Binding RootGroup}"/>
        </Grid>
    </Border>
</UserControl>
