<UserControl x:Class="UpdatingParameters.Views.FilteringCriteriaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:models="clr-namespace:UpdatingParameters.Models"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance local:FilteringCriteriaControl }">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type models:FilterGroup}">
            <local:FilterGroupControl />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:FilterRule}">
            <local:FilterRuleControl />
        </DataTemplate>
    </UserControl.Resources>

    <Border BorderBrush="#4CAF50" BorderThickness="2"
            Background="#E8F5E8" Margin="5" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Margin="10 5">
                <StackPanel Orientation="Horizontal">
                    <Button Content="+"
                            Click="ButtonSelectedCategories_OnClick" />
                    <TextBlock Text="{Binding SelectedCategoriesStatus}" />
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" Margin="10">
                <ContentControl Content="{Binding RootGroup}" />
            </Grid>
            <Popup x:Name="Popup"
                   StaysOpen="False">
                <Border Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="5">
                    <local:SelectedCategoriesControl />
                </Border>
            </Popup>
        </Grid>


    </Border>
</UserControl>