<UserControl x:Class="UpdatingParameters.Views.CustomFormulaControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converter="clr-namespace:UpdatingParameters.Views.Converters"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:CustomFormulaControl2}">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:BoolVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converter:MeasurementUnitFilterConverter x:Key="MeasurementUnitFilterConverter" />
            <converter:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/LightTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border
        Style="{DynamicResource BorderFolding}"
        MaxHeight="250"
        VerticalAlignment="Top"
        Tag="{Binding ElementName=NameCheckBox}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="3 2">
                <TextBlock
                    Style="{DynamicResource TextBlockStyle}"
                    Margin="10 2 10 0"
                    Text="{Binding NameParameter, RelativeSource={RelativeSource AncestorType= UserControl}}">

                </TextBlock>
                <CheckBox
                    Style="{DynamicResource JellyCheckboxStyle}"
                    Name="NameCheckBox"
                    Content="Заполнять"
                    IsChecked="{Binding IsChecked,RelativeSource={RelativeSource AncestorType= UserControl}}">

                </CheckBox>
            </StackPanel>
            <Grid Grid.Row="1"
                  Margin="0 2">
                <Grid.Visibility>
                    <Binding Path="IsChecked" ElementName="NameCheckBox"
                             Converter="{StaticResource BoolToVisibilityConverter}" />
                </Grid.Visibility>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Header="Список параметров"
                          Grid.Column="0"
                          Style="{DynamicResource GroupBoxStyle}">

                    <Grid>
                        <ListBox Grid.Row="0"
                                 Style="{DynamicResource ModernListBoxStyle}"
                                 ItemsSource="{Binding Parameters,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 SelectedItem="{Binding SelectParameter,RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding }" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </GroupBox>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical"
                            DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button
                        Style="{DynamicResource ButtonArrowRightStyle}"
                        Command="{Binding AddParameterFormulaCommand}">
                    </Button>
                    <Button
                        Style="{DynamicResource ButtonArrowLeftStyle}"
                        Command="{Binding RemoveParameterFormulaCommand}">
                    </Button>
                </StackPanel>
                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <GroupBox
                        Style="{DynamicResource GroupBoxStyle}"
                        Grid.Row="0" Header="Формула">

                        <DataGrid
                            Style="{DynamicResource CleanDataGridStyle}"
                            ItemsSource="{Binding Path=AdskFormulas, 
                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                            SelectedItem="{Binding SelectFormula,RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CanUserAddRows="False"
                            CanUserResizeColumns="True"
                            CanUserReorderColumns="False"
                            AutoGenerateColumns="False" ColumnHeaderStyle="{DynamicResource CleanColumnHeaderStyle}"
                            CellStyle="{DynamicResource CleanCellStyle}"
                            RowStyle="{DynamicResource CleanRowStyle}">
                         
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Имя параметра"
                                                    Binding="{Binding ParameterName}"
                                                    Width="2*"
                                                    CanUserSort="False"
                                                    IsReadOnly="True" />

                                <DataGridTextColumn Header="Значение"
                                                    Binding="{Binding Significance}"
                                                    Width="*"
                                                    IsReadOnly="True"
                                                    CanUserSort="False" />
                                <DataGridTemplateColumn Header="Ед. измерения" Width="*" CanUserSort="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding MeasurementUnit, Converter={StaticResource EnumDescriptionConverter}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                ItemsSource="{Binding MeasurementCategory, Converter={StaticResource MeasurementUnitFilterConverter}}"
                                                SelectedItem="{Binding MeasurementUnit, UpdateSourceTrigger=PropertyChanged}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock
                                                            Text="{Binding ., Converter={StaticResource EnumDescriptionConverter}}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Коэффициент"
                                                    Binding="{Binding  Path=Stockpile}"
                                                    Width="2*"
                                                    CanUserSort="False" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <StackPanel Orientation="Horizontal"
                                DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Grid.Row="1"
                                Margin="12 0">
                        <Button
                            Style="{DynamicResource ButtonArrowUpStyle}"
                            Command="{Binding MoveUpFormulaCommand }">
                        </Button>

                        <Button
                            Style="{DynamicResource ButtonArrowDownStyle}"
                            Command="{Binding MoveDownFormulaCommand}">
                        </Button>
                    </StackPanel>
                </Grid>
                <TextBlock 
                    Style="{DynamicResource TextBlockStyle}"
                    Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0"
                           DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Margin="10 0 10 5 ">
                  <Run Text="Пример: " />
                    <Run Text="{Binding NameParameter, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Run Text=" = " />
                    <Run
                        Text="{Binding CombinedValues,Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</UserControl>