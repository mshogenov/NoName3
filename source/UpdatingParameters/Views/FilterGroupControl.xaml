<UserControl x:Class="UpdatingParameters.Views.FilterGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:models="clr-namespace:UpdatingParameters.Models"
             xmlns:vm="clr-namespace:UpdatingParameters.ViewModels"
             xmlns:services="clr-namespace:UpdatingParameters.Services"
             xmlns:updatingParameters="clr-namespace:UpdatingParameters"
             xmlns:converters="clr-namespace:UpdatingParameters.Views.Converters"
             d:DataContext="{d:DesignInstance Type = vm:FilterGroupVM}"
             mc:Ignorable="d"
             d:DesignHeight="Auto" d:DesignWidth="500">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:EnumToDisplayConverter x:Key="EnumToDisplayConverter" />
    </UserControl.Resources>
    <Border BorderBrush="#4CAF50" BorderThickness="2"
            Background="#E8F5E8" Margin="5" CornerRadius="5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0"
                          ItemsSource="{Binding Path=EnrollmentCondition}"
                          SelectedItem="{Binding SelectedEnrollmentCondition }">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumToDisplayConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="1" Content="Добавить правило"
                        Margin="5,0" Padding="5,2"
                        Command="{Binding AddRuleCommand}" />
                <Button Grid.Column="2" Content="Добавить набор"
                        Margin="5,0" Padding="5,2"
                        Command="{Binding AddGroupCommand}" />
                <Button Grid.Column="3" Content="✕" 
                        Command="{Binding RemoveCommand}" />

            </Grid>
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Children}">
                <ItemsControl.ItemTemplateSelector>
                    <services:FilterItemTemplateSelector />
                </ItemsControl.ItemTemplateSelector>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>