<UserControl x:Class="UpdatingParameters.Views.FilterGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:models="clr-namespace:UpdatingParameters.Models"
             xmlns:services="clr-namespace:UpdatingParameters.Services"
             xmlns:updatingParameters="clr-namespace:UpdatingParameters"
             xmlns:converters="clr-namespace:UpdatingParameters.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="Auto" d:DesignWidth="500">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:EnumToDisplayConverter x:Key="EnumToDisplayConverter" />
        <!-- Шаблоны для вложенных элементов -->
        <DataTemplate DataType="{x:Type models:FilterGroup}">
            <local:FilterGroupControl />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:FilterRule}">
            <local:FilterRuleControl />
        </DataTemplate>
    </UserControl.Resources>
    <Border BorderBrush="#2196F3" BorderThickness="1" 
            Margin="5" Padding="5" CornerRadius="3">
        <StackPanel>
            <!-- Заголовок группы -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" 
                          Width="150"
                          ItemsSource="{Binding LogicalOperators}"
                          SelectedItem="{Binding LogicalOperator}"/>

                <Button Grid.Column="2" 
                        Content="Добавить правило"
                        Margin="5,0" 
                        Command="{Binding AddRuleCommand}"/>

                <Button Grid.Column="3" 
                        Content="Добавить набор"
                        Margin="5,0" 
                        Command="{Binding AddGroupCommand}"/>

                <Button Grid.Column="4" 
                        Content="✕"
                        Margin="5,0" 
                        Command="{Binding RemoveCommand}"
                        Visibility="{Binding CanRemove, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <!-- Содержимое группы -->
            <ItemsControl ItemsSource="{Binding Items}"
                          Margin="20,5,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>