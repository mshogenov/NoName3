<UserControl x:Class="UpdatingParameters.Views.SearchableComboBox2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ComboBox x:Name="PART_Combo" IsTextSearchEnabled="False" StaysOpenOnEdit="True"
                  ItemsSource="{Binding ElementName=root, Path=ItemsSource}"
                  SelectedItem="{Binding ElementName=root, Path=SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  ItemTemplate="{Binding ElementName=root, Path=ItemTemplate}"
                  DisplayMemberPath="{Binding ElementName=root, Path=DisplayMemberPath}"
                  Width="{Binding ElementName=root, Path=Width}" MinWidth="100" />
    </Grid>
</UserControl>