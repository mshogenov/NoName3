<UserControl x:Class="UpdatingParameters.Views.CustomFormulaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converter="clr-namespace:UpdatingParameters.Views.Converters"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800" d:DataContext="{d:DesignInstance local:CustomFormulaControl}">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:BoolVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <ResourceDictionary.MergedDictionaries>
                <!-- <ResourceDictionary -->
                <!--     Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/ThemesResourceDictionary.xaml" /> -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border
        Padding="3"
        MaxHeight="250"
        VerticalAlignment="Top"
        Tag="{Binding ElementName=NameCheckBox}">
        <!-- <Border.Style> -->
        <!--     <StaticResource ResourceKey="BorderFolding" /> -->
        <!-- </Border.Style> -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal" >
                <TextBlock
                    Margin="10 0 10 0"
                    Text="{Binding NameParameter, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                    <!-- <TextBlock.Style> -->
                    <!--     <StaticResource ResourceKey="TextBlock" /> -->
                    <!-- </TextBlock.Style> -->
                </TextBlock>
                <CheckBox
               Name="NameCheckBox"
                    Content="Заполнять"
               IsChecked="{Binding IsChecked,RelativeSource={RelativeSource AncestorType= UserControl}}">
                    <!-- <CheckBox.Style> -->
                    <!--     <StaticResource ResourceKey="AnimatedCheckBox" /> -->
                    <!-- </CheckBox.Style> -->
                </CheckBox>
            </StackPanel>
            <Grid Grid.Row="1"
                  Margin="0 2">
                <Grid.Visibility>
                    <Binding Path="IsChecked" ElementName="NameCheckBox"
                             Converter="{StaticResource BoolToVisibilityConverter}" />
                </Grid.Visibility>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Header="Список параметров"
                          Grid.Column="0">
                    <!-- <GroupBox.Style> -->
                    <!--     <StaticResource ResourceKey="GradientGroupBoxStyle" /> -->
                    <!-- </GroupBox.Style> -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBox Grid.Row="0"
                                 Text="{Binding SearchParametersView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <!-- <TextBox.Style> -->
                            <!--     <StaticResource ResourceKey="SearchTextBoxStyle" /> -->
                            <!-- </TextBox.Style> -->
                        </TextBox>

                        <ListBox Grid.Row="1"

                                 ItemsSource="{Binding ParametersView,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 SelectedItem="{Binding SelectParameter,RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <!-- <ListBox.Style> -->
                            <!--     <StaticResource ResourceKey="ModernListBoxStyle" /> -->
                            <!-- </ListBox.Style> -->
                            <!-- <ListBox.ItemContainerStyle> -->
                            <!--     <StaticResource ResourceKey="ModernListBoxItemStyle" /> -->
                            <!-- </ListBox.ItemContainerStyle> -->
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Definition.Name}"
                                               TextTrimming="CharacterEllipsis">
                                        <!-- <TextBlock.Style> -->
                                        <!--     <StaticResource ResourceKey="ListBoxItemTextStyle" /> -->
                                        <!-- </TextBlock.Style> -->
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </GroupBox>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical"
                            DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button
                        Command="{Binding AddParameterFormulaCommand}">
                        <!-- <Button.Style> -->
                        <!--     <StaticResource ResourceKey="ButtonArrowRight" /> -->
                        <!-- </Button.Style> -->
                    </Button>
                    <Button
                        Command="{Binding RemoveParameterFormulaCommand}">
                        <!-- <Button.Style> -->
                        <!--     <StaticResource ResourceKey="ButtonArrowLeft" /> -->
                        <!-- </Button.Style> -->
                    </Button>
                </StackPanel>
                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0" Header="Формула">
                        <!-- <GroupBox.Style> -->
                        <!--     <StaticResource ResourceKey="GradientGroupBoxStyle" /> -->
                        <!-- </GroupBox.Style> -->
                        <DataGrid
                                             ItemsSource="{Binding Path=AdskFormulas, 
                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             SelectedItem="{Binding SelectFormula,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             CanUserAddRows="False"
                                             CanUserResizeColumns="True"
                                             CanUserReorderColumns="False"
                                             AutoGenerateColumns="False">
                            <!-- <DataGrid.Style> -->
                            <!--     <StaticResource ResourceKey="CleanDataGridStyle" /> -->
                            <!-- </DataGrid.Style> -->
                            <!-- <DataGrid.ColumnHeaderStyle> -->
                            <!--     <StaticResource ResourceKey="CleanColumnHeaderStyle" /> -->
                            <!-- </DataGrid.ColumnHeaderStyle> -->
                            <!-- <DataGrid.CellStyle> -->
                            <!--     <StaticResource ResourceKey="CleanCellStyle" /> -->
                            <!-- </DataGrid.CellStyle> -->
                            <!-- <DataGrid.RowStyle> -->
                            <!--     <StaticResource ResourceKey="CleanRowStyle" /> -->
                            <!-- </DataGrid.RowStyle> -->
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Имя параметра"
                                                    Binding="{Binding ParameterName}"
                                                    Width="2*"
                                                    CanUserSort="False"
                                                    IsReadOnly="True" />
                                <DataGridTextColumn Header="Префикс"
                                                    Binding="{Binding Prefix}"
                                                    Width="*"
                                                    CanUserSort="False" />
                                <DataGridTextColumn Header="Значение"
                                                    Binding="{Binding Significance}"
                                                    Width="2*"
                                                    IsReadOnly="True"
                                                    CanUserSort="False" />
                                <DataGridTextColumn Header="Суффикс"
                                                    Binding="{Binding Suffix}"
                                                    Width="*"
                                                    CanUserSort="False" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <StackPanel Orientation="Horizontal"
                                DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Grid.Row="1"
                                Margin="12 0">
                        <Button
                            Command="{Binding MoveUpFormulaCommand }">

                            <!-- <Button.Style> -->
                            <!--     <StaticResource ResourceKey="ButtonArrowUp" /> -->
                            <!-- </Button.Style> -->
                        </Button>

                        <Button
                            Command="{Binding MoveDownFormulaCommand}">

                            <!-- <Button.Style> -->
                            <!--     <StaticResource ResourceKey="ButtonArrowDown" /> -->
                            <!-- </Button.Style> -->
                        </Button>
                    </StackPanel>
                </Grid>
                <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0"
                           DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Margin="10 0 10 5 ">
                    <!-- <TextBlock.Style> -->
                    <!--     <StaticResource ResourceKey="TextBlock" /> -->
                    <!-- </TextBlock.Style> -->
                    <Run Text="Пример: " />
                    <Run Text="{Binding NameParameter, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Run Text=" = " />
                    <Run
                        Text="{Binding CombinedValues,Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</UserControl>