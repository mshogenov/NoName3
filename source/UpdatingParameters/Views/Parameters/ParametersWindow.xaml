<UserControl x:Class="UpdatingParameters.Views.Parameters.ParametersWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UpdatingParameters.Views"
             xmlns:allCategories="clr-namespace:UpdatingParameters.ViewModels.Parameters"
             xmlns:parameters="clr-namespace:UpdatingParameters.ViewModels.Parameters"
             d:DataContext="{d:DesignInstance Type=parameters:ParametersViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/LightTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Style="{DynamicResource Grid}">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!-- Основной контент -->
        <Border Style="{DynamicResource BorderFolding}">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="40" />
                    <RowDefinition MinHeight="40" />
                    <RowDefinition MinHeight="40" />
                    <RowDefinition MinHeight="40" />
                </Grid.RowDefinitions>

                <!-- Строка 1 -->
                <CheckBox
                    Style="{DynamicResource JellyCheckboxStyle}"
                    Content="ADSK_Система_Сокращение"
                    Grid.Row="0"
                    Grid.Column="0"
                    IsChecked="{Binding SystemAbbreviationIsChecked}">

                </CheckBox>

                <!-- Строка 2 -->
                <CheckBox
                    Style="{DynamicResource JellyCheckboxStyle}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="ADSK_Система_Имя"
                    IsChecked="{Binding SystemNameIsChecked}">

                </CheckBox>

                <!-- Строка 3 -->
                <Grid Grid.Row="2"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        Style="{DynamicResource JellyCheckboxStyle}"
                        Grid.Column="0"
                        IsChecked="{Binding WallThicknessIsChecked}"
                        Content="ADSK_Толщина стенки">

                    </CheckBox>

                    <Button
                        Grid.Column="2"
                        Style="{DynamicResource SettingsButton}"
                        Command="{Binding Path=AdjustWallThicknessCommand}">
                        <Button.ToolTip>
                            <ToolTip>Настроить параметры воздуховодов</ToolTip>
                        </Button.ToolTip>
                    </Button>
                </Grid>


                <!-- Строка 4 -->
                <CheckBox
                    Style="{DynamicResource JellyCheckboxStyle}"
                    Grid.Row="3"
                    Grid.Column="0"
                    IsChecked="{Binding HermeticClassIsChecked}"
                    Content="Класс герметичности">

                </CheckBox>
            </Grid>
        </Border>

        <!-- Нижние кнопки -->
        <Grid
            Grid.Row="1"
            Margin="5,0,5,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Style="{DynamicResource CommonButton}"
                Content="Сохранить настройки"
                Command="{Binding SaveCommand}"
                Margin="0,0,5,0">
               </Button>

            <Button
                Grid.Column="1"
                Style="{DynamicResource CommonButton}"
                Content="Обновить параметры"
                Command="{Binding UpdateParametersCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Margin="5,0,0,0">
            </Button>
        </Grid>
    </Grid>
</UserControl>