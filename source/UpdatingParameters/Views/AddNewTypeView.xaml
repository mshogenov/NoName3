<Window x:Class="UpdatingParameters.Views.AddNewTypeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:UpdatingParameters.Views"
        xmlns:vm="clr-namespace:UpdatingParameters.ViewModels"
        mc:Ignorable="d"
        Title="AddNewTypeView" Height="450" Width="400" d:DataContext="{d:DesignInstance vm:AddNewTypeVM  }">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите название типа" />
                <TextBox Text="{Binding NewTypeName }"
                         Width="100" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Выберите категорию типа" />
                <ComboBox ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          Width="100">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding SelectedParameter.Definition.Name}" />
                <Button Content="Выбрать параметр"
                        Command="{Binding SelectParameterCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
            </StackPanel>
        </StackPanel>

        <Popup
            Width="400"
            IsOpen="{Binding IsPopupOpen}"
            PlacementTarget="{Binding CurrentPopupTarget}">
            <TabControl>
                <TabItem Header="Параметры экземпляра">
                    <ListBox ItemsSource="{Binding InstanceParameters}"
                             SelectedItem="{Binding SelectedParameter}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="Параметры типа">
                    <ListBox ItemsSource="{Binding TypeParameters}"
                             SelectedItem="{Binding SelectedParameter}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>

        </Popup>
    </Grid>

</Window>