<views:BaseRevitWindow
    x:Class="ArrangeFixtures.Views.ArrangeFixturesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:ArrangeFixtures.ViewModels"
    xmlns:views="clr-namespace:NoNameApi.Views;assembly=NoNameAPI"
    xmlns:converters="clr-namespace:NoNameApi.Views.Converters;assembly=NoNameAPI"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModel:ArrangeFixturesViewModel}"
    WindowStartupLocation="CenterScreen"
    Title="Расставить крепления"
    Background="{DynamicResource WindowBackgroundBrush}"
    Height="200"
    Width="400">
    <Window.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToIconConverter x:Key="BoolToIconConverter" />
            <d:ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/DarkTheme.xaml" />
                <ResourceDictionary
                    Source="pack://application:,,,/NoNameAPI;component/Views/Resources/Themes/Styles.xaml" />
            </d:ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Style="{DynamicResource Grid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button Content="Выбрать трубы"
                        Margin="0 0 10 0"
                        Command="{Binding SelectedPipeCommand}" />
                <TextBlock Style="{DynamicResource TextBlockStyle}">
                    <Run Text="Выбрано труб:" />
                    <Run Text="{Binding SelectedPipesCount}" />
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">

                <TextBlock Style="{DynamicResource TextBlockStyle}"
                           Text="Выбрать крепеж:"
                           Margin="0 0 10 0" />
                <ComboBox Style="{DynamicResource ModernComboBoxStyle}"
                          ItemsSource="{Binding Fixtures}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>

    </Grid>
</views:BaseRevitWindow>